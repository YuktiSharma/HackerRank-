#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int i,j,k,n,l=1;
    cin>>n;
    for(i=1;i<=n;i++)
        {
        for(k=l;k<=n-1;k++)
            {
            cout<<" ";
        }l++;
        for(j=1;j<=i;j++)
            {
            cout<<"#";
        }
        cout<<"\n";
        }
    return 0;
        
}
